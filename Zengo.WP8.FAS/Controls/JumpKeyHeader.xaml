<UserControl x:Class="Zengo.WP8.FAS.Controls.JumpKeyHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource StandardTextColour}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="GridKeyHeader" Height="70" Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                           TextWrapping="Wrap" 
                           Text="{Binding DisplayKey}" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Center" 
                           FontFamily="{StaticResource PhoneFontFamilySemiBold}" 
                           FontSize="60" 
                           Height="70"  Foreground="White"/>


    </Grid>
    
</UserControl>