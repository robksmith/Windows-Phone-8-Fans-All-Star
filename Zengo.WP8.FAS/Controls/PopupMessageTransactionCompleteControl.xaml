<UserControl x:Class="Zengo.WP8.FAS.Controls.PopupMessageTransactionCompleteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource StandardTextColour}"
    d:DesignHeight="200" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">

        <Canvas x:Name="MessageCanvas" Background="#FFE4C5C5" >

            <Grid Height="120" Width="480" Background="YellowGreen" >

                <TextBlock Name="TextBlockMessage" TextWrapping="Wrap" FontSize="18" Margin="5,5,5,5" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run Text="{Binding LocalizedResources.TransactionUpdate, Source={StaticResource LocalizedStrings}}"/>
                </TextBlock>

            </Grid>

        </Canvas>

    </Grid>
    
</UserControl>