<UserControl x:Class="Zengo.WP8.FAS.Controls.PlayerIconTestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">

        <Button x:Name="ButtonPlayer" BorderBrush="Red" Foreground="White" BorderThickness="1" Width="120" Height="150" >

            <Grid Background="#FF141976">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Images/NoImage.png" Margin="0,0,36,0" />

                <TextBlock Grid.Row="1" Text="Defender" FontFamily="Verdana" FontSize="12" />

            </Grid>

        </Button>
        
    </Grid>
    
</UserControl>