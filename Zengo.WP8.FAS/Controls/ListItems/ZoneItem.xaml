<UserControl x:Class="Zengo.WP8.FAS.Controls.ListItems.ZoneItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
        <Grid x:Name="LayoutRoot" Grid.Row="1" Margin="12,0,12,0" Height="90"  Background="Transparent">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Source="/Images/icn_menu_star_1.png" Width="75" Height="75" HorizontalAlignment="Left"/>

            <TextBlock 
				Grid.Row="0" 
				TextWrapping="NoWrap" 
				Text="{Binding Name}" 
				Style="{StaticResource PhoneTextLargeStyle}" 
                FontSize="30"
				Margin="104,14,12,0"  Foreground="White"/>

            <TextBlock 
				    Grid.Row="0" 
				    TextWrapping="NoWrap" 
				    Text="{Binding PlayersCountText}"  Foreground="White" 
				    Margin="104,60,216,10" Grid.RowSpan="2" FontSize="13.333"/>

    </Grid>
        
</UserControl>